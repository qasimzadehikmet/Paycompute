@model IEnumerable<PaymentRecordIndexViewModel>

@{ ViewBag.Title = "Patment Records"; }

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Employee List</li>
                    </ol>
                </nav><br /><br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        <a class="btn btn-xs btn-outline-success float-md-right" asp-controller="Employee" asp-action="Create">New Employee</a>

                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Employee</th>
                                    <th>Pay Date</th>
                                    <th>Month</th>
                                    <th>Tax Year</th>
                                    <th>Total Earnings</th>
                                    <th>Total Deduction</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                <tr>
                                    <td>
                                        <a asp-action="Detail" asp-route-Id="@item.Id">
                                            @item.FullName
                                        </a>
                                    </td>
                                    <td>@item.PayDate.ToString("dd/MM/yyyy")</td>
                                    <td>@item.PayMonth</td>
                                    <td>@item.Year</td>
                                    <td>@item.TotalEarnings.ToString("C")</td>
                                    <td>@item.TotalDeduction.ToString("c")</td>
                                    <td>@item.NetPayment.ToString("C")</td>
                                    <td>
                                        <a class="text-primary" asp-action="Payslip" asp-route-Id="@item.Id"></a>
                                        <i class="fas fa-bars"></i> Preview Payslip

                                        <a class="text-primary" asp-action="PrintPayslip" asp-route-Id="@item.Id"></a>
                                        <i class="fas fa-file-pdf"></i>Payslip Pdf
                           
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>



                    </div>
                </div>

            </div>
        </div>
    </div>
</div>